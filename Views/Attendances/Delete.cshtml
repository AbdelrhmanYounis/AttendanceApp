@model AttendanceApp.Models.Attendance

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdate)
        </dt>
        <dd class = "col-sm-10">
          @Html.DisplayName(@Model.LastUpdate.ToString("dd MMMM yyyy hh:mm tt"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayName(@Model.Day.ToString("dddd, dd MMMM yyyy"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartHour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayName($"{@Model.StartHour.Hours % 12}:{(@Model.StartHour.Minutes<10?"0":"")}{@Model.StartHour.Minutes} {(@Model.StartHour.Hours / 12 > 0 ? "PM" : "AM")}")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndHour)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.EndHour != null)
                {
            @Html.DisplayName($"{@Model.EndHour?.Hours % 12}:{(@Model.EndHour?.Minutes<10?"0":"")}{@Model.EndHour?.Minutes} {(@Model.EndHour?.Hours / 12 > 0 ? "PM" : "AM")}")
                }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Location")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkFrom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AttendanceId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index"class="btn btn-secondary" >Back to List</a>
    </form>
</div>
